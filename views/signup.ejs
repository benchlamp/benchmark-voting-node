<% include _header %>


        <div class="col-sm-6 col-sm-offset-3">
            
            <h1><span class="fa fa-sign-in"></span> Signup</h1>
            <hr />
            <div class="well">
                <i class="fa fa-info-circle"></i>This app is purely for demonstration purposes. Feel free to make up some details.
            </div>
            
            <!-- display any authentication messages -->
            <% if (message.length > 0) { %>
                <div class="alert alert-danger"><%= message %></div>
            <% } %>
            
            
            <!-- LOGIN FORM -->
            <form action="/signup" method="post">
                
                <div class="form-group">
                    <label>Email</label>
                    <input type="text" class="form-control" name="email">
                </div>
                
                <div class="form-group">
                    <label>Password</label>
                    <input type="password" class="form-control" name="password">
                </div>
                
                <button type="submit" class="btn btn-warning btn-md">Signup</button>
                
            </form>
            
            <hr />
            
            <p>Already have an account? <a href="/login">Login</a></p>
            


    Return to <a href="/surveys">surveys</a>
            </div>
    </div>
<% include _footer %>