<% include _header %>

    <div class="container">
        <div class="col-sm-6 col-sm-offset-3">
            
            <h1><span class="fa fa-save"></span> Create a New Survey</h1>
            

            <!-- CREATE SURVEY FORM -->
            <form action="/create" method="post" id="create-form">
                
                <div class="form-group">
                    <label>Survey Name</label>
                    <input type="text" class="form-control" name="name" placeholder="What's your favourite pizza?" required>
                </div>
                
                <div class="form-group">
                    <label>Option 1</label>
                    <input type="text" class="form-control" name="option-1" placeholder="Meat Feast" required>
                </div>

                <div class="form-group">
                    <label>Option 2</label>
                    <input type="text" class="form-control" name="option-2" placeholder="BBQ Chicken" required>
                </div>
                
                <div id="options-target"></div>
                
                <button type="submit" class="btn btn-success btn-md">Create Survey</button>
                <div class="btn btn-default btn-md" id="add-option">Add an option</div>
                
            </form>
            
            <hr />
            
            <p>Return to <a href="/surveys">surveys</a></p>
            
        </div>
    </div>
    
    <script type="text/javascript" src="controllers/create.client.js"></script>

<% include _footer %>